#include<stdio.h>
# define N 2   
# define TRUE 1  
# define FALSE 0   
int interested[N] = FALSE;  
int turn;   
voidEntry_Section (int process)   
{  
    int other;   
    other = 1-process;  
    interested[process] = TRUE;  
    turn = process;   
    while (interested [other] =True && TURN=process);  
}  
voidExit_Section (int process)  
{  
    interested [process] = FALSE;  
}  
